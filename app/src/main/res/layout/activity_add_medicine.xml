<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uzupełnij dane o leku"
            android:textSize="35dp"
            android:textAlignment="center"
            android:padding="30sp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/addMedicineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:hint="Podaj nazwę leku"/>

        <EditText
            android:id="@+id/addDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:hint="Podaj dawkowanie leku"/>

        <EditText
            android:id="@+id/addReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:inputType="text"
            android:hint="Podaj działanie leku"/>

        <EditText
            android:id="@+id/addMedicineNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:inputType="text"
            android:hint="Dodaj notatkę odnośnie danego leku"/>


        <Button
            android:id="@+id/sendMedicineInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Zatwierdź"
            android:padding="10sp"
            android:layout_margin="20sp"/>

    </LinearLayout>

</ScrollView>


