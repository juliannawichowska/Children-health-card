<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uzupełnij dane o operacji dziecka"
            android:textSize="35dp"
            android:textAlignment="center"
            android:padding="30sp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/addOperationsNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:hint="Podaj rodzaj operacji"/>

        <EditText
            android:id="@+id/addOperationsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:hint="Podaj imię i nazwisko lekarza"/>

        <EditText
            android:id="@+id/addOperationsDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:inputType="text"
            android:hint="Dodaj datę operacji"/>

        <Button
            android:id="@+id/sendOperationsInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Zatwierdź"
            android:padding="10sp"
            android:layout_margin="20sp"/>

    </LinearLayout>

</ScrollView>


